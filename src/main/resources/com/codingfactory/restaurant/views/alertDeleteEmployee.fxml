<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:controller="com.codingfactory.restaurant.controllers.AlertControllerDeleteEmployee" alignment="TOP_CENTER" spacing="40.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Are you sure you want to delete your old employee from the database ?" />
      <CheckBox fx:id="warningCheckbox" mnemonicParsing="false" text="Yes. This action is irreversible !" />
      <HBox alignment="CENTER" spacing="50.0">
         <children>
            <Button fx:id="cancel" defaultButton="true" mnemonicParsing="false" text="No, cancel" />
            <Button fx:id="delete" disable="true" mnemonicParsing="false" text="Confirm" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
   </padding>
</VBox>
