<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codingfactory.restaurant.controllers.FormControllerNewMenu">
    <children>
        <Label text="Réserver une table" VBox.vgrow="ALWAYS">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <VBox>
            <children>
                <Label text="Nombre de personne" />
                <TextField fx:id="clientNumber" />
            </children>
        </VBox>
        <VBox>
            <children>
                <Text fx:id="errorMessage" strokeType="OUTSIDE" strokeWidth="0.0" visible="false" />
            </children>
        </VBox>
        <Button fx:id="bookTableBtn" mnemonicParsing="false" text="Réserver" />
    </children>
    <padding>
        <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
    </padding>
</VBox>
