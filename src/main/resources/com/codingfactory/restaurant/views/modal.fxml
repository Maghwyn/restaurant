                  <Pane>
                     <children>
                        <Button fx:id="modalCloseButton" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="40.0" styleClass="modal-close" text="X">
                           <font>
                              <Font size="18.0" />
                           </font></Button>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Pane>
               </children>
               <HBox.margin>
                  <Insets left="65.0" />
