<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codingfactory.restaurant.controllers.EmployeeController">
    <children>
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <children>
                <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="newEmployeeButton" mnemonicParsing="false" text="Create a new employee" />
                    </buttons>
                </ButtonBar>
                <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab fx:id="currentEmployeeTab" text="Employees">
                            <content>
                                <VBox>
                                    <children>
                                        <TableView fx:id="currentEmployeeTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn prefWidth="75.0" text="Name">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="name"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                                <TableColumn prefWidth="75.0" text="Job">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="job"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                                <TableColumn prefWidth="109.0" text="Total Hours">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="workedHours"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab fx:id="previousEmployeeTab" text="Previous employees">
                            <content>
                                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                    <children>
                                        <TableView fx:id="previousEmployeeTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                                            <columns>
                                                <TableColumn prefWidth="75.0" text="Name">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="name"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                                <TableColumn prefWidth="75.0" text="Job">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="job"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                                <TableColumn prefWidth="109.0" text="Total Hours">
                                                    <cellValueFactory>
                                                        <PropertyValueFactory property="workedHours"/>
                                                    </cellValueFactory>
                                                </TableColumn>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
        <HBox prefHeight="50.0" />
    </children>
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
    </padding>
</VBox>
